

pipeline {
    agent any
    tools {
        nodejs 'nodejs10'
    }

    stages {
        stage('Git checkout') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/RokeshN/Nodejs.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh "npm install"
            }
        }
      stage('docker build & push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh 'docker build -t newimage .'
                        sh 'docker tag newimage kpselvaperiyasamy/nodejsassesment:${BUILD_NUMBER}'
                        sh 'docker push kpselvaperiyasamy/nodejsassesment:${BUILD_NUMBER}'
                    }
                }
            }
        }
